@import 'nib'

html
  overflow-y: scroll

body
  background: #fff
  font-family: 'Open Sans', Helvetica, Arial, sans-serif
  padding-top: 51px

.sponge-logo
  height: 36px
  float: left
  margin-top: -8px

@media screen and (max-width: 767px)
  .sponge-logo
    margin-top: -4px
  .proj-row
    margin-bottom: 0px

.logo-a
  height: 50px

.search-back
  font-family: 'Open Sans', Helvetica, Arial, sans-serif

.landing-heading
  margin-bottom: 30px
  font-weight: lighter

.nav-form
  margin-top: 8px

  .form-group
    margin-bottom: 0

.landing-bold
  font-weight: bold
  display: inline

.page-header
  font-weight: bold
  margin-top: 90px
  margin-bottom: 70px
  border-bottom-color: #ddd

.inactive-project-list
  padding-bottom: 120px;

.landing
  font-size: 20px

.project-header
  display: block

.project-icon
  margin-top: 30px

.nav-dropdown-link
  padding: 15px
  background-color: #e7e7e7

.search-back
  position: relative
  width: 100%
  height: 500px
  background: url(../img/back.jpg) no-repeat center center
  background-size: cover
  color #eee
  box-shadow 0 15px 40px rgba(0, 0, 0, 0.1)

  .search-cover
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    z-index: 5
    background: linear-gradient(top, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4))

  .search-text
    position: absolute
    left: 0
    right: 0
    top: 150px
    z-index: 10

  a
    color #bbb

    &:hover
      color #ddd
      text-decoration none
