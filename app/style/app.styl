@import 'nib'

body
  background: #fff
  font-family: 'Open Sans', Helvetica, Arial, sans-serif
  //padding-top: 50px

.sponge-logo
  height: 36px
  float: left
  margin-top: -8px

.search-back
  font-family: 'Open Sans', Helvetica, Arial, sans-serif

.landing-heading
  margin-bottom: 30px
  font-weight: lighter

.landing-bold
  font-weight: bold
  display: inline

.page-header
  font-weight: bold
  margin-top: 90px
  margin-bottom: 70px
  border-bottom-color: #ddd

.proj-row
  margin-bottom: 40px

.project-list
  padding-bottom: 120px;

.landing
  font-size: 20px

.striped
  background: #fff
  padding-top: 30px
  padding-bottom: 30px

  h1
    margin-top: 10px

  .btn-group
    margin-top: 12px

.project-header
  display: block

.project-icon
  margin-top: 30px

.navbar
  border-bottom: none
  margin-bottom: 0

  &.navbar-inverse

    background-color: #3a3a3a

    .navbar-nav .active a
      background-color: #2a2a2a
      color: #ddd

      &:hover
        background-color: #2a2a2a
        color: #fff

    .navbar-nav .open > a
      background-color: #2a2a2a
      color: #ddd

    .dropdown-menu .active a
    .dropdown-menu .active a:hover
      color: #fff
      background-color: #428bca


  .navbar-nav > li > a
    color: #aaa

  notify-color = #ffcc00
  notify-text-color = #333

  notify-hover-color = #fff
  notify-hover-text-color = #666


  .notified

    .notify-icon
      color: notify-color

    .notify-badge
      background-color: notify-color
      color: notify-text-color

    &:hover

      .notify-icon
        color: notify-hover-color

      .notify-badge
        background-color: notify-hover-color
        color: notify-hover-text-color

  li.open

    &:hover
    .notify-icon
      color: notify-hover-color

    .notify-badge
      background-color: notify-hover-color
      color: notify-hover-text-color

   .usr-img
      width: 18px
      height: 18px

.slider
  margin-bottom: 60px

  .panel-body
    white-space: nowrap
    overflow hidden

  .package.thumbnail
    width: 158px
    position: relative
    display: inline-block
    margin-right 15px
    margin-bottom: 0
    white-space: normal

    .img
      width: 150px
      height: 150px
      background-position: center center
      background-size: cover


    .thumbnail-cover
      position: absolute
      left: 4px
      right: 4px
      top: 4px
      bottom: 4px
      background: linear-gradient(top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.4))

    .caption.inlaid
      position: absolute
      bottom: 0
      color #eee

.nav-dropdown-link
  padding: 15px
  background-color: #e7e7e7

.search-back
  position: relative
  width: 100%
  height: 500px
  background: url(../img/back.png) no-repeat center center
  background-size: cover
  color #eee
  box-shadow 0 15px 40px rgba(0, 0, 0, 0.1)

  .search-cover
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    z-index: 5
    background: linear-gradient(top, rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4))

  .search-text
    position: absolute
    left: 0
    right: 0
    top: 150px
    z-index: 10

  a
    color #bbb

    &:hover
      color #ddd
      text-decoration none

.plugin-back
  position: relative
  height: 400px;

  .img
    width: 100%

    position: absolute
    top: 0
    left: 0
    right: 0

  .plugin-cover
    position: absolute
    top: 0
    right: 0
    left: 0
    bottom: 0
    background: rgba(0, 0, 0, 0.3)

.link-dropdown
  position: absolute
  float: left
  top: 50px
  left: 50%
  width: auto
  white-space: nowrap

  .in
    position: relative
    left: -50%
    background-color: #e7e7e7

.drop-active
  background-color: #e7e7e7

.carousel-caption.text-left
  text-align: left !important

#package-carousel
  border-radius 10px
  overflow: hidden

  .carousel-control

    &.left
      border-radius: left 10px

    &.right
      border-radius: right 10px

  .item
    height: 400px;
    background-repeat no-repeat
    background-position center
    background-color: #000
    background-size: cover

  .shroud
    height: 100%
    width: 100%
    background: rgba(0, 0, 0, 0.5)